71:     if (stat.isDirectory()) {
72:       if (!file.startsWith('.') && file !== 'node_modules') {
73:         walkDir(filePath, fileCallback);
74:       }
75:     } else if (file.endsWith('.tsx') || file.endsWith('.ts')) {
76:       fileCallback(filePath);
77:     }
78:   });
