 23:       return NextResponse.json(
 24:         { error: 'No LinkedIn access token found. Please sign in with LinkedIn to import your profile.' },
 25:         { status: 400 }
 26:       )
 27:     }
 28: 
 29:     console.log('[LINKEDIN_API] Fetching profile data')
 30: 
