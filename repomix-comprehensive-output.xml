101:       deselectApplication: (id) =>
102:         set((state) => ({
103:           selectedApplicationIds: state.selectedApplicationIds.filter((appId) => appId !== id),
104:         })),
105:       
106:       toggleApplicationSelection: (id) =>
107:         set((state) => {
108:           const isSelected = state.selectedApplicationIds.includes(id)
