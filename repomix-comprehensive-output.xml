359: function calculateYearsBetween(start: Date, end: Date): number {
360:   const diffMs = end.getTime() - start.getTime()
361:   const diffYears = diffMs / (1000 * 60 * 60 * 24 * 365.25)
362:   return Math.max(0, Math.round(diffYears * 10) / 10)
363: }
