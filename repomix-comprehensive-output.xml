61:     .replace(/<[^>]+>/g, '')
62:     .replace(/&nbsp;/g, ' ')
63:     .replace(/&amp;/g, '&')
64:     .replace(/&lt;/g, '<')
65:     .replace(/&gt;/g, '>')
66:     .replace(/&quot;/g, '"')
67:     .replace(/&#039;/g, "'")
68:     .replace(/\s+/g, ' ')
69:     .trim()
70: }
