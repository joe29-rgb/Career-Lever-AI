 59:         method: 'POST',
 60:         headers: { 'Content-Type': 'application/json' },
 61:         body: JSON.stringify({
 62:           jobId: job.id,
 63:           resumeText,
 64:           coverText,
 65:           contacts: job.contacts,
 66:           company: job.company,
 67:           jobTitle: job.title
 68:         })
 69:       })
 70: 
 71:       if (!response.ok) {
 72:         throw new Error('Compose failed')
 73:       }
 74: 
 75:       const data = await response.json()
