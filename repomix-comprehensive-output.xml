 19: async function fetchGmailSubjects(accessToken: string): Promise<string[]> {
 20:   try {
 21:     const list = await fetch('https://gmail.googleapis.com/gmail/v1/users/me/messages?q=category:primary newer_than:30d&maxResults=12', {
