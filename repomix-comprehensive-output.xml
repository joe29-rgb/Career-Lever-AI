 59:     try {
 60:       const response = await fetch('/api/v2/company/deep-research', {
 61:         method: 'POST',
 62:         headers: { 'Content-Type': 'application/json' },
 63:         body: JSON.stringify({
 64:           company: company.trim(),
 65:           role: role?.trim(),
 66:           geo: location?.trim()
 67:         })
