 55:     }
 56: 
 57:     // Log errors
 58:     if (metric.statusCode >= 500) {
 59:       logger.error('API error', {
 60:         endpoint: metric.endpoint,
 61:         statusCode: metric.statusCode,
 62:         duration: `${metric.duration}ms`
 63:       })
 64:     }
