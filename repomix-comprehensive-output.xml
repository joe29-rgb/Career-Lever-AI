48:         analytics?.track('career_finder_view')
49:       }
50:     }
51:   }, [pathname, searchParams])
52: 
53:   // Track session duration on unmount
54:   useEffect(() => {
55:     const sessionStart = Date.now()
56: 
57:     return () => {
