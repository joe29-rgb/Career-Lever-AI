 69:   /**
 70:    * Generate unique job ID for deduplication
 71:    */
 72:   private generateJobId(title: string, company: string, location: string): string {
 73:     const normalized = `${title}-${company}-${location}`
 74:       .toLowerCase()
 75:       .replace(/[^a-z0-9]/g, '-');
 76:     
 77:     return normalized;
