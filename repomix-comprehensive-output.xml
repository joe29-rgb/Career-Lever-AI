 14:   status: 'healthy' | 'degraded' | 'unhealthy'
 15:   timestamp: string
 16:   version: string
 17:   uptime: number
 18:   services: {
 19:     database: ServiceHealth
 20:     ai: ServiceHealth
 21:     cache: ServiceHealth
 22:   }
 23:   metrics: {
 24:     memoryUsage: NodeJS.MemoryUsage
 25:     cpuUsage?: NodeJS.CpuUsage
 26:   }
 27: }
