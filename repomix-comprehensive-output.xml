151: /**
152:  * Helper: Strip HTML tags
153:  */
154: function stripHtmlTags(html: string): string {
155:   return html
156:     .replace(/<style[^>]*>.*?<\/style>/gis, '')
157:     .replace(/<script[^>]*>.*?<\/script>/gis, '')
158:     .replace(/<[^>]+>/g, ' ')
159:     .replace(/&nbsp;/g, ' ')
160:     .replace(/&amp;/g, '&')
161:     .replace(/&lt;/g, '<')
162:     .replace(/&gt;/g, '>')
163:     .replace(/&quot;/g, '"')
164:     .replace(/&#39;/g, "'")
165:     .replace(/\s+/g, ' ')
166:     .trim()
167: }
