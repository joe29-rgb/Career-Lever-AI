268: /**
269:  * Escape HTML
270:  */
271: function escapeHtml(text: string): string {
272:   return text
273:     .replace(/&/g, '&amp;')
274:     .replace(/</g, '&lt;')
275:     .replace(/>/g, '&gt;')
276:     .replace(/"/g, '&quot;')
