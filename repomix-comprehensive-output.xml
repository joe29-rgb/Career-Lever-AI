36:         let priority: 'high' | 'medium' | 'low' = 'low'
37: 
38:         if (daysSinceFollowUp >= 14) {
39:           needsFollowUp = true
40:           priority = 'high'
41:         } else if (daysSinceFollowUp >= 7) {
42:           needsFollowUp = true
43:           priority = 'medium'
44:         } else if (daysSinceFollowUp >= 5) {
45:           needsFollowUp = true
46:           priority = 'low'
47:         }
