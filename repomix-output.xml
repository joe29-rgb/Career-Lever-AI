                          <AvatarFallback>{request.user?.name[0]}</AvatarFallback>
                        </Avatar>
                        <div className="flex-1">
                          <p className="font-medium text-sm">{request.user?.name}</p>
                          <p className="text-xs text-muted-foreground">{request.user?.title}</p>
