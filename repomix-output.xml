export default function ProfileSettingsPage() {
  const { data: session, status } = useSession()
  const [loading, setLoading] = useState(false)
  const [formData, setFormData] = useState({
    name: '',
    email: '',
    phone: '',
    location: '',
    jobTitle: '',
    company: '',
    yearsOfExperience: '',
    bio: '',
  })

  useEffect(() => {
    if (session?.user) {
