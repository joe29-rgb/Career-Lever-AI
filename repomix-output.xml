      }

      if (!includeExpired) {
        query.expiresAt = { $gt: new Date() }
      }

      const companies = await CompanyData.find(query)
        .sort({ cachedAt: -1 })
        .skip(skip)
        .limit(limit)
        .lean<ICompanyData[]>()
        .exec()

      const duration = Date.now() - startTime
      dbLogger.dbQuery('SEARCH', 'CompanyData', duration)
