      timeline: body.timeline || 'flexible',
      urgency: body.urgency,
      completedAt: new Date(body.completedAt || new Date())
    }

    // Update user profile
    const user = await User.findOneAndUpdate(
      { email: session.user.email },
      {
        $set: {
          profile: profileData,
          updatedAt: new Date()
        }
      },
      { new: true, upsert: false }
