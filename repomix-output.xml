        const data = await response.json()
        setStats(data)
      }
    } catch (error) {
      console.error('[PIPELINE] Error fetching stats:', error)
    } finally {
      setLoading(false)
    }
  }

  const stages = [
    { name: 'Applied', count: stats.applied, icon: FileText, color: 'bg-blue-500', textColor: 'text-blue-600' },
