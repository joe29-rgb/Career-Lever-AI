/**
 * Application State Store (Zustand)
 * 
 * Manages global application state including:
 * - UI state (modals, sidebars, loading)
 * - Temporary data (drafts, uploads)
 * - Navigation state
 */

import { create } from 'zustand'

interface UploadProgress {
