      case 'career_advice': return <BookOpen className="w-4 h-4" />
      case 'success_story': return <Award className="w-4 h-4" />
      case 'question': return <MessageSquare className="w-4 h-4" />
      default: return <MessageCircle className="w-4 h-4" />
