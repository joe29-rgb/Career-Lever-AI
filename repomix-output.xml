                        <span>{item.name}</span>
                        {item.badge && item.badge > 0 && (
                          <span className="ml-1 px-2 py-0.5 text-xs font-bold text-white bg-gradient-to-r from-red-500 to-pink-500 rounded-full shadow-sm">
                            {item.badge}
                          </span>
                        )}
                      </Link>
                    )}
