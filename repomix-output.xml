                  </>
                ) : (
                  <>
                    <Wand2 className="mr-2 h-4 w-4" />
                    Generate Resume
                  </>
                )}
              </Button>

              {generatedResume && (
                <div className="space-y-2">
                  <Button
                    onClick={() => setShowDiff(!showDiff)}
                    variant="outline"
                    className="w-full"
                  >
                    {showDiff ? 'Hide Diff' : 'Show Original vs Tailored'}
                  </Button>
                  <Button
                    onClick={downloadResume}
                    variant="outline"
                    className="w-full"
                  >
                    <Download className="mr-2 h-4 w-4" />
