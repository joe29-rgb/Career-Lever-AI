                      // Stage 2: Matching skills (33-66%)
                      setAnalysisStage('matching')
                      setAnalysisProgress(40)
                      console.log('[RESUME_ANALYSIS] Stage 2: Matching skills...')
                      
                      // Store signals in localStorage for job search
                      if (autopilotData.signals) {
