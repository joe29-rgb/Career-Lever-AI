  if (loading) {
    return (
      <Card>
        <CardHeader>
          <CardTitle>Follow-Up Reminders</CardTitle>
        </CardHeader>
        <CardContent>
          <div className="animate-pulse space-y-3">
            <div className="h-16 bg-muted rounded"></div>
