interface SalaryAnalysis {
  marketData: {
    role: string
    location: string
    experience: string
    salaryRange: {
      min: number
      median: number
      max: number
      currency: string
    }
    percentiles: {
      p25: number
      p50: number
      p75: number
      p90: number
    }
  }
  negotiationStrategy: {
    targetSalary: number
    openingOffer: number
    counterOffer: number
    reasoning: string[]
  }
  leveragePoints: {
    experience: string[]
    skills: string[]
    marketDemand: string[]
    companyFactors: string[]
  }
  talkingPoints: {
    strengths: string[]
    valueProposition: string
    marketComparison: string
    growthPotential: string
  }
